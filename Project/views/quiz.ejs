<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>QuickQuiz</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/stylesheets/styles.css" />
</head>
<body>
  <div class="quiz-container">
    <!-- Header / Navbar -->
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary bg-custom">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><span>QuickQuiz</span></a>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <form action="/" method="get">
                  <input class="btn btn-primary" type="submit" value="Home" />
                </form>
              </li>
              <li class="nav-item">
                <form action="/" method="get">
                  <input class="btn btn-primary" type="submit" value="Reset" />
                </form>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Quiz Section -->
    <section>
      <div class="card-container">
        <div class="card">
          <% if (question_set && question_set[current_question]) { %>
            <h5 class="card-header">Question: <%= question_set[current_question].question %></h5>
            <div class="card-body">
              <!-- The form action goes to /quiz/:index -->
              <form method="POST" action="/quiz/<%= current_question %>">
                <div class="d-grid gap-2 col-6 mx-auto">
                  <% for (let key of ['A', 'B', 'C', 'D']) { %>
                    <% if (question_set[current_question][key]) { %>
                      <button
                        class="btn btn-primary"
                        type="submit"
                        name="answer"
                        value="<%= key %>"
                      >
                        <%= key %>: <%= question_set[current_question][key] %>
                      </button>
                    <% } %>
                  <% } %>
                </div>
              </form>
            </div>
          <% } else { %>
            <p>Error: Question data is missing or invalid.</p>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Footer / Progress Bar -->
    <footer>
      <div
        class="progress"
        role="progressbar"
        aria-label="Basic example"
        aria-valuenow="30"
        aria-valuemin="0"
        aria-valuemax="100"
      >
        <div
          class="progress-bar"
          style="width: <%= ((current_question + 1) / question_set.length) * 100 %>%"
        ></div>
      </div>
    </footer>
  </div>
</body>
</html>
