<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuickQuiz</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="quiz-container">
        <header>
            <nav class="navbar navbar-expand-lg bg-body-tertiary bg-custom">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"><span>QuickQuiz</span></a>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <input class="btn btn-primary" type="reset" value="Reset">
                            </li>
                            <!-- <li class="nav-item">
                                <a href="#" class="btn btn-secondary disabled" tabindex="-1" role="button" aria-disabled="true">Timer</a>
                            </li> -->
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <section>
            <div class="card-container">
                <% if (currentQuestionIndex >= 0) { %>
                    <div class="card">
                        <h5 class="card-header"><%= questions[currentQuestionIndex].question %></h5>
                        <div class="card-body">
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <% questions[currentQuestionIndex].options.forEach((option, index) => { %>
                                    <button class="btn btn-primary" type="button"><%= option %></button>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="card">
                        <h5 class="card-header">Quiz Completed</h5>
                        <div class="card-body">
                            <p>Thank you for taking the quiz!</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

        <footer>
            <div class="progress" role="progressbar" aria-valuenow="<%= (currentQuestionIndex + 1) / questions.length * 100 %>" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar" style="width: <%= (currentQuestionIndex + 1) / questions.length * 100 %>%;"></div>
            </div>

            <% if (currentQuestionIndex >= 0 && currentQuestionIndex < questions.length - 1) { %>
                <div class="next-button">
                    <a href="/next/<%= currentQuestionIndex %>" class="btn btn-primary">Next Question</a>
                </div>
            <% } %>
        </footer>
    </div>
</body>
</html>
